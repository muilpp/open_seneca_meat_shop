<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tweet_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_text"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/tweet_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message_black_48dp"
            />

        <TextView
            android:id="@+id/tweet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tweet_profile_image"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tweet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tweet_date"
            android:layout_toEndOf="@+id/tweet_profile_image"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tweet_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tweet_name"
            android:layout_toEndOf="@+id/tweet_profile_image"
            android:layout_marginStart="10dp"
            />
    </RelativeLayout>
</RelativeLayout>